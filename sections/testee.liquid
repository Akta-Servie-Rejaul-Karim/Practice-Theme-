{% if section.settings.image != blank %}
  {%- assign widths = "300,600,900" | split: "," -%}
  {%- assign sizes = "(max-width: 600px) 300px, 600px" -%}
  {%- assign loading = "lazy" -%}
  {{
    section.settings.image 
    | image_url: width: 1946
    | image_tag: 
      widths: widths, 
      alt: 'image', 
      sizes: sizes, 
      loading: loading,
      class: "product-media__image"
  }}

 
{% else %}
  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
{% endif %}

{% schema %}
  {
    "name": "test t",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "image"
      }
    ],
    "presets": [
      {
        "name": "test t"
      }
    ]
  }
{% endschema %}