{% liquid
  
    assign widths = '300,450,600,750,900,1050,1200,1350,1500,1650,1800,1950,2000,2500,3000,3500,4000,5000' | split: ','
    assign sizes = "(max-width: 600px) 300px, (max-width: 900px) 600px, 900px"
    assign loading = "lazy"
%}

{% if section.settings.image != blank %}
  
  {{
    section.settings.image 
    | image_url: width: 1946
    | image_tag: 
      widths: widths, 
      alt: 'image', 
      sizes: sizes, 
      loading: loading,
      class: "product-media__image"
  }}
 
{% else %}
  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
{% endif %}

{% schema %}
  {
    "name": "test t",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "image"
      }
    ],
    "presets": [
      {
        "name": "test t"
      }
    ]
  }
{% endschema %}